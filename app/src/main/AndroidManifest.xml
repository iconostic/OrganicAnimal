<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.icono.organicanimal">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_organic"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_organic_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.noActionBar">
        <activity android:name=".LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SelecActivity" />
        <activity
            android:name=".FocusItem"
            android:theme="@style/NoTitleDialog" />
        <activity android:name=".FocusShelter" />
        <activity android:name=".NoticeActivity" />
        <activity android:name=".NoteActivity" />
        <activity android:name=".ProgressActivity"></activity>
    </application>

</manifest>